<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="117dp"
        android:layout_marginBottom="9dp"
        android:ems="10"
        android:hint="Title"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/message"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:hint="Message"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/channel1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <Button
        android:id="@+id/channel1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Send on Channel 1"
        android:onClick="sendOnChannel1"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/channel2"
        app:layout_constraintEnd_toEndOf="@+id/channel2"
        app:layout_constraintStart_toStartOf="@+id/channel2"
        app:layout_constraintTop_toBottomOf="@+id/message" />

    <Button
        android:id="@+id/channel2"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginBottom="294dp"
        android:text="Send on Channel 2"
        android:onClick="sendOnChannel2"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/channel1" />
</androidx.constraintlayout.widget.ConstraintLayout>

